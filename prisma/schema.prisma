generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  name     String
  email    String @unique
  password String
  todo     Todo[]
}

model Todo {
  id          String  @id @default(cuid())
  title       String
  description String
  userId      String?
  User        User?   @relation(fields: [userId], references: [id])
}
